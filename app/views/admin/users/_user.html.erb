<% @users.each do |user| %>
  <tr>
    <td><%= user.id %></td>
    <td>
      <%= link_to user.name, user_path(user) %>
    </td>
    <td><%= user.email %></td>
    <td><%= l user.created_at, format: :date_time_format %></td>
    <td class="text-center">
      <%= link_to  edit_user_path(user.id),
        class: "btn btn-warning btn-xs btn-option",
        title: t("admin.btn_edit_title", resource: :user) do %>
        <i class="fa fa-edit"></i>
      <% end %>
      <% unless current_user.is_user? user %>
        <%= link_to admin_user_path(user.id), method: :delete,
          class: "btn btn-danger btn-xs btn-option",
          title: t("admin.btn_delete_title", resource: :user),
          data: {confirm: t("admin.delete_confirmation",
          resource: :user, number: user.id)} do %>
          <i class="fa fa-trash"></i>
        <% end %>
      <% end %>
    </td>
  </tr>
<% end %>
