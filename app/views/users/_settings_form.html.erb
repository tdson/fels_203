<%= form_for @user do |f| %>
  <div class="panel-body">
    <div class="alert alert-info">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <small>
        <li><%= t ".infor_1" %></li>
        <li><%= t ".infor_2" %></li>
      </small>
    </div>
    <div class="form-group">
      <%= f.label :email, t(".lb_email") %>
      <%= f.email_field :email, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :current_password, t(".lb_password_old") %>
      <%= f.password_field :current_password, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :password, t(".lb_password_new") %>
      <%= f.password_field :password, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, t(".lb_password_conf") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>
    <% if admin? && !current_user?(@user) %>
      <div class="form-group">
        <%= f.label t(".lb_permission") %>
        <span class="tab">
          <%= f.check_box :is_admin %>
          <%= f.label :is_admin, t(".lb_is_admin") %>
        </span>
      </div>
    <% end %>
  </div>
  <div class="panel-footer">
    <%= f.submit t(".btn_submit"), class: "btn btn-primary btn-sm" %>
  </div>
<% end %>
