<div class="wrapper">
  <% if @user %>
    <% provide :title, @user.name %>
    <div class="col-md-5">
      <div class="panel panel-default sidebar-menu">
        <div class="panel-heading">
          <h3 class="panel-title"><%= t ".header_profile" %></h3>
        </div>
        <div class="panel-body">
          <%= render "profile" %>
        </div>
      </div>
    </div>
    <div class="col-md-7">
      <div class="panel panel-default sidebar-menu">
        <div class="panel-heading">
          <h3 class="panel-title"><%= t ".header_activities" %></h3>
        </div>
        <div class="panel-body">
        </div>
      </div>
    </div>
  <% else %>
    <div class="text-center">
      <h2><%= t ".not_found_user" %></h2>
    </div>
  <% end %>
</div>
