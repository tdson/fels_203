<header id="top-bar" class="navbar-fixed-top animated-header">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse"
        data-target=".navbar-collapse">
        <span class="sr-only"><%= t ".link_data_toggle" %></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <div class="navbar-brand">
        <%= link_to image_tag("logo_120x72.png", alt: t(".logo_alt")) %>
      </div>
    </div>

    <nav class="collapse navbar-collapse navbar-right" role="navigation">
      <div class="main-menu">
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to t(".link_home"), guest_index_url %></li>
          <li><%= link_to t(".link_about"), "#about" %></li>
          <li><%= link_to t(".link_contact"), "#" %></li>
          <% if logged_in? %>
            <li><%= link_to t(".link_word_list"), "#" %></li>
            <li><%= link_to t(".link_members"), users_path %></li>
            <li class="dropdown">
              <%= link_to current_user, class: "dropdown-toggle",
                data: {toggle: "dropdown"} do %>
                <%= current_user.name %> <span class="caret"></span>
              <% end %>
              <div class="dropdown-menu">
                  <ul>
                    <li>
                      <%= link_to t(".link_profile"), user_path(current_user) %>
                    </li>
                    <li>
                      <%= link_to t(".link_settings"),
                        edit_user_path(current_user) %>
                    </li>
                    <% if admin? %>
                      <li class="divider"></li>
                      <li><%= link_to t(".link_admin_cp"), "#" %></li>
                    <% end %>
                    <li class="divider"></li>
                    <li>
                      <%= link_to t(".link_log_out"), logout_path,
                        method: :delete %>
                    </li>
                  </ul>
              </div>
            </li>
          <% else %>
            <li><%= link_to t(".link_sign_in"), "#",
              data: {toggle: "modal", target: "#signin_modal"} %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>
  </div>
</header>
